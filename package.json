{
  "name": "orlog3js",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "src/server",
  "scripts": {
    "errors:lint": "eslint src --fix && echo \"Lint done\"",
    "errors:ts": "tsc --project tsconfig.json --noEmit && echo \"TSC done\"",
    "errors": "npm run errors:lint && npm run errors:ts",
    "test": "env-cmd -f .env.test echo \"No test specified\" && exit 1",
    "build:clean": "rimraf dist",
    "build:client": "vite build --outDir dist/src/client",
    "build:srr": "vite build --ssr src/client/index.ssr.tsx --outDir dist/src/ssr",
    "build:updatePackageJson": "npx json -I -f dist/package.json -e \"this.type='commonjs'\"",
    "build:server": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run build:updatePackageJson",
    "build": "npm run build:clean && npm run build:client && npm run build:srr && npm run build:server",
    "preview": "cross-env NODE_ENV=production node server",
    "start": "node dist/src/server/index.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "@react-three/drei": "^9.111.2",
    "@react-three/fiber": "^8.17.5",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sirv": "^2.0.4",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "three": "^0.167.1",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.167.2",
    "@vitejs/plugin-react": "^4.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "json": "^11.0.0",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-plugin-environment": "^1.1.3"
  }
}
